                @if (((tbl_UserDetail)Session["User"]).GroupPages.Contains("GLAList"))
                {
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/Dashboard/GLAList" style="color:white;">GL Account</a>
                    </li>
