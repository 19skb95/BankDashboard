                    <li class="nav-item">
                        <a class="nav-link" href="/Dashboard/Balance" style="color:white;">Balancing</a>
                    </li>
                }
                @if (((tbl_UserDetail)Session["User"]).GroupPages.Contains("DeviceList"))
                {
