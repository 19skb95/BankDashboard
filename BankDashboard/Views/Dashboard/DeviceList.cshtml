                            <label>
                                Model Number:
                            </label>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" required name="ModelNumber" class="form-control" maxlength="100" />
                        </div>
                    </div>
                   
                    <br />
                    <div class="row">
                        <div class="col-sm-5">
                            @if (TempData["Success"] != null)
                            {
                                <span style="color:green">@TempData["Success"]</span>
                            }
