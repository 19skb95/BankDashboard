                    <input type="hidden" id="reportType" name="reportType" value="" />
                </div>
                <div class="col-md-2">
                    @if (((BankDashboard.Models.tbl_UserDetail)Session["User"]).UserGroup.Equals(BankDashboard.Common.Constants.UserGroups.Admin))
