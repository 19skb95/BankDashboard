                                    <option id="sel" value="0">Select User</option>
                                    @if (ViewBag.UserList != null)
                                    {
                                        foreach (var item in ((List<BankDashboard.Models.tbl_UserDetail>)ViewBag.UserList))
                                        {
                                            <option value="@item.AccountName">@item.AccountName</option>
                                        }
                                    }
                                </select>
                            </div>
                        }



                    }
                </div>
